<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".presentation.settings.fragment.AppSettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Appearance Section -->
        <TextView
            style="?attr/textAppearanceTitleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/appearance"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <!-- Theme Mode -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_dark_mode"
            style="@style/Widget.App.Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/dark_mode" />

        <!-- Theme Color -->
        <RelativeLayout
            android:id="@+id/layout_theme_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:enabled="false"
            android:alpha="0.5"
            android:paddingVertical="8dp">

            <TextView
                style="?attr/textAppearanceBodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/theme_color" />

            <View
                android:id="@+id/view_theme_color_preview"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_theme_color_preview" />
        </RelativeLayout>

        <!-- Font Size -->
        <TextView
            style="?attr/textAppearanceBodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/font_size" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_font_size"
            style="@style/Widget.App.Slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stepSize="1"
            android:value="1"
            android:valueFrom="0"
            android:valueTo="2" />

        <!-- General Section -->
        <TextView
            style="?attr/textAppearanceTitleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="@string/general"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <!-- Language -->
        <RelativeLayout
            android:id="@+id/layout_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:enabled="false"
            android:alpha="0.5"
            android:paddingVertical="8dp">

            <TextView
                style="?attr/textAppearanceBodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/language" />

            <TextView
                android:id="@+id/text_current_language"
                style="?attr/textAppearanceBodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                tools:text="English" />
        </RelativeLayout>

        <!-- Notifications -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_notifications"
            style="@style/Widget.App.Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="48dp"
            android:enabled="false"
            android:alpha="0.5"
            android:text="@string/enable_notifications" />

        <!-- Animations -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_animations"
            style="@style/Widget.App.Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="48dp"
            android:enabled="false"
            android:alpha="0.5"
            android:text="@string/enable_animations" />

        <!-- AI Engine Section -->
        <TextView
            style="?attr/textAppearanceTitleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="@string/ai_engine"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <!-- Configure AI Engine -->
        <RelativeLayout
            android:id="@+id/layout_configure_engine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:paddingVertical="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    style="?attr/textAppearanceBodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/configure_ai_engine" />

                <TextView
                    style="?attr/textAppearanceBodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/configure_ai_engine_description"
                    android:textColor="?android:attr/textColorSecondary" />
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_forward"
                android:contentDescription="@string/configure_engine_content_desc"
                android:tint="?android:attr/textColorSecondary" />
        </RelativeLayout>

        <!-- Functionality Test -->
        <RelativeLayout
            android:id="@+id/layout_functionality_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:paddingVertical="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    style="?attr/textAppearanceBodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/functionality_test_title" />

                <TextView
                    style="?attr/textAppearanceBodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/functionality_test_subtitle"
                    android:textColor="?android:attr/textColorSecondary" />
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_forward"
                android:tint="?android:attr/textColorSecondary" />
        </RelativeLayout>


        <!-- Data & Backup Section -->
        <TextView
            style="?attr/textAppearanceTitleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="@string/data_and_backup"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <!-- Storage Location -->
        <RelativeLayout
            android:id="@+id/layout_storage_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:enabled="false"
            android:alpha="0.5"
            android:paddingVertical="8dp">

            <TextView
                style="?attr/textAppearanceBodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/storage_location" />

            <TextView
                android:id="@+id/text_current_storage_location"
                style="?attr/textAppearanceBodyMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                tools:text="Internal" />
        </RelativeLayout>

        <!-- Auto Backup -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switch_auto_backup"
            style="@style/Widget.App.Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="48dp"
            android:enabled="false"
            android:alpha="0.5"
            android:text="@string/auto_backup" />

    </LinearLayout>
</ScrollView> 
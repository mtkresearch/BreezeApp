<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".presentation.chat.fragment.ChatFragment">

    <!-- 錯誤狀態視圖 -->
    <com.mtkresearch.breezeapp.presentation.common.widget.ErrorView
        android:id="@+id/errorView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 載入狀態視圖 -->
    <com.mtkresearch.breezeapp.presentation.common.widget.LoadingView
        android:id="@+id/loadingView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/errorView" />

    <!-- 主要聊天內容區域 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatContentLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/inputSection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loadingView">

        <!-- AI狀態指示器 -->
        <TextView
            android:id="@+id/textViewAIStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/ai_message_bg"
            android:gravity="center"
            android:padding="@dimen/spacing_small"
            android:text="@string/ai_is_responding"
            android:textColor="@color/ai_message_text"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <!-- 訊息列表 -->

        <!-- 打字指示器 -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMessages"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingTop="@dimen/spacing_small"
            android:paddingBottom="@dimen/spacing_medium"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAIStatus"
            tools:listitem="@layout/item_chat_message" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabScrollToBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/scroll_to_bottom"
            android:src="@android:drawable/stat_sys_download_done"
            android:visibility="gone"
            app:backgroundTint="@color/primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/on_primary"
            tools:visibility="visible" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 輸入區域 -->
    <LinearLayout
        android:id="@+id/inputSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- ASR 模式和語音狀態區域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ASR 模式指示器 (動態配置) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_surface_variant"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_small">

                <TextView
                    android:id="@+id/textViewAsrModeLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/spacing_small"
                    android:gravity="center_vertical"
                    android:text="@string/asr_mode"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    app:drawableStartCompat="@drawable/ic_settings" />

                <TextView
                    android:id="@+id/textViewAsrMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:background="@drawable/bg_primary_button"
                    android:paddingStart="@dimen/spacing_small"
                    android:paddingTop="2dp"
                    android:paddingEnd="@dimen/spacing_small"
                    android:paddingBottom="2dp"
                    android:text="@string/asr_mode_offline_file"
                    android:textColor="@color/on_primary"
                    android:textSize="10sp" />

                <ImageButton
                    android:id="@+id/buttonToggleAsrMode"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/switch_asr_mode"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_refresh"
                    android:visibility="gone"
                    app:tint="@color/primary" />

            </LinearLayout>

            <!-- 語音狀態指示器 -->
            <TextView
                android:id="@+id/textViewVoiceStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_ai_message"
                android:drawablePadding="@dimen/spacing_small"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_small"
                android:text="@string/listening_to_voice"
                android:textColor="@color/ai_message_text"
                android:textSize="12sp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_mic"
                tools:visibility="visible" />

            <!-- 錄音進度條 (僅離線模式顯示) -->
            <LinearLayout
                android:id="@+id/layoutRecordingProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_surface_variant"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_small"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:text="@string/recording"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <ProgressBar
                    android:id="@+id/progressBarRecording"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/primary" />

                <TextView
                    android:id="@+id/textViewRecordingProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:text="0%"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 輸入框和按鈕區域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- 語音按鈕 -->
            <ImageButton
                android:id="@+id/buttonVoice"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="@dimen/spacing_small"
                android:background="@drawable/bg_circle_button"
                android:src="@drawable/ic_mic"
                android:contentDescription="@string/voice_input"
                android:scaleType="centerInside"
                android:padding="12dp"
                app:tint="@color/on_primary" />

            <!-- 輸入框 -->
            <EditText
                android:id="@+id/editTextMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_input_container"
                android:hint="@string/type_message"
                android:imeOptions="actionSend"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="4"
                android:minHeight="48dp"
                android:padding="@dimen/spacing_medium"
                android:textColorHint="@color/text_secondary"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <!-- 發送按鈕 -->
            <ImageButton
                android:id="@+id/buttonSend"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="@dimen/spacing_small"
                android:background="@drawable/bg_circle_button"
                android:src="@drawable/ic_send"
                android:contentDescription="@string/send_message"
                android:scaleType="centerInside"
                android:padding="12dp"
                app:tint="@color/on_primary" />

        </LinearLayout>

        <!-- 輔助按鈕區域 (可選) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 
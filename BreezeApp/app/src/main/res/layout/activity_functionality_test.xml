<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    tools:context=".presentation.settings.test.FunctionalityTestActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/surface"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationContentDescription="@string/action_close"
        app:title="@string/functionality_test_title"
        app:subtitle="@string/functionality_test_subtitle"
        app:titleTextColor="@color/text_primary"
        app:subtitleTextColor="@color/text_secondary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- Connection Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Status Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:id="@+id/ivConnectionStatus"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_error"
                        android:contentDescription="Connection status" />

                    <TextView
                        android:id="@+id/connectionStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Disconnected"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <ProgressBar
                        android:id="@+id/progressConnection"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Connect Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/connectButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Connect"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- LLM Test Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LLM Test"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/llmInputText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter prompt"
                        android:text="è¯ç™¼ç§‘çš„è‘£äº‹é•·æ˜¯èª°"
                        android:maxLines="3"
                        android:inputType="textMultiLine" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Buttons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/sendLLMRequestButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Send"
                        android:textAllCaps="false"
                        android:enabled="false"
                        app:cornerRadius="8dp"
                        android:layout_marginEnd="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/sendStreamingRequestButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Stream"
                        android:textAllCaps="false"
                        android:enabled="false"
                        app:cornerRadius="8dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Metrics Display -->
                <LinearLayout
                    android:id="@+id/llmMetricsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="@drawable/bg_rounded_surface"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvLlmMetrics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:fontFamily="monospace"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Response Display (Scrollable) -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/bg_rounded_surface"
                    android:fillViewport="true">

                    <TextView
                        android:id="@+id/llmResponseTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:padding="12dp"
                        android:gravity="start|top"
                        android:text="Response will appear here..."
                        tools:ignore="HardcodedText" />
                </ScrollView>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- TTS Test Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TTS Test"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ttsInputText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter text for speech"
                        android:text="è¯ç™¼ç§‘MediaTekæˆç«‹æ–¼1997å¹´ï¼Œæ˜¯æ¥­ç•Œçš„pioneer"
                        android:maxLines="3"
                        android:inputType="textMultiLine" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Run Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sendTtsButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="ðŸ”Š Speak"
                    android:textAllCaps="false"
                    android:enabled="false"
                    app:cornerRadius="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- Metrics Display -->
                <LinearLayout
                    android:id="@+id/ttsMetricsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="@drawable/bg_rounded_surface"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvTtsMetrics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:fontFamily="monospace"
                        android:textColor="#000000" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ASR Test Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ASR Test"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Audio Source Toggle -->
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/audioSourceToggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSourceFile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="File"
                        android:textAllCaps="false"
                        style="?attr/materialButtonOutlinedStyle" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSourceMic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Microphone"
                        android:textAllCaps="false"
                        style="?attr/materialButtonOutlinedStyle" />
                </com.google.android.material.button.MaterialButtonToggleGroup>

                <!-- File Selection (shown when File source selected) -->
                <LinearLayout
                    android:id="@+id/fileSourceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/selectAudioFileButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Select .wav"
                        android:textAllCaps="false"
                        android:enabled="false"
                        app:cornerRadius="8dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_marginEnd="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/sendAsrButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Transcribe"
                        android:textAllCaps="false"
                        android:enabled="false"
                        app:cornerRadius="8dp"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Microphone (shown when Mic source selected) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/recordAudioButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="ðŸŽ¤ Start Recording"
                    android:textAllCaps="false"
                    android:enabled="false"
                    app:cornerRadius="8dp"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp" />

                <!-- Metrics Display -->
                <LinearLayout
                    android:id="@+id/asrMetricsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="@drawable/bg_rounded_surface"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvAsrMetrics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:fontFamily="monospace"
                        android:textColor="#000000" />
                </LinearLayout>

                <!-- Response Display (Scrollable) -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_rounded_surface"
                    android:fillViewport="true">

                    <TextView
                        android:id="@+id/asrResponseTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:padding="12dp"
                        android:gravity="start|top"
                        android:text="Transcription will appear here..."
                        tools:ignore="HardcodedText" />
                </ScrollView>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Log Output Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Logs"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/clearLogButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Clear"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        style="@style/Widget.MaterialComponents.Button.TextButton" />
                </LinearLayout>

                <!-- Log TextView -->
                <TextView
                    android:id="@+id/logTextView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#1a1a1a"
                    android:textColor="#4CAF50"
                    android:fontFamily="monospace"
                    android:textSize="11sp"
                    android:padding="8dp"
                    android:scrollbars="vertical"
                    android:overScrollMode="always" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Translucent dialog theme for feedback dialog -->
    <style name="Theme.Dialog.Translucent" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    
    <!-- Custom preference styles -->
    <style name="PreferenceThemeOverlay.BreezeApp" parent="PreferenceThemeOverlay">
        <item name="seekBarPreferenceStyle">@style/SeekBarPreference.BreezeApp</item>
        <item name="colorAccent">@color/primary</item>
    </style>
    
    <style name="SeekBarPreference.BreezeApp" parent="Preference.SeekBarPreference">
        <item name="android:progressTint">@color/primary</item>
        <item name="android:thumbTint">@color/primary</item>
    </style>
</resources> 
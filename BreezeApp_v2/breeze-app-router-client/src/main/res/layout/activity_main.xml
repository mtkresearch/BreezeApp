<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Connection Status -->
        <TextView
            android:id="@+id/connectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Disconnected"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="16dp"/>

        <!-- Connection Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            
            <Button
                android:id="@+id/connectButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Connect"
                android:layout_marginEnd="8dp"/>
            
            <Button
                android:id="@+id/initializeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Initialize"
                android:enabled="false"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- API Testing Buttons -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic API Tests"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/getApiVersionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get API Version"
            android:enabled="false"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/hasCapabilityButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Capabilities"
            android:enabled="false"
            android:layout_marginBottom="16dp"/>

        <!-- LLM Testing -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LLM (Language Model) Tests"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/llmInputText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your text prompt here"
                android:text="Tell me a joke about Android development."/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/sendLLMRequestButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="💬 Send Chat"
                android:enabled="false"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/sendStreamingRequestButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📡 Send Streaming"
                android:enabled="false"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Image Analysis Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VLM (Vision Language Model) Tests"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            
            <Button
                android:id="@+id/selectImageButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📷 Select Image"
                android:enabled="false"
                android:layout_marginEnd="4dp"/>
            
            <Button
                android:id="@+id/analyzeImageButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🔍 Analyze"
                android:enabled="false"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Image Preview -->
        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop"
            android:contentDescription="Selected image preview"
            android:visibility="gone"/>

        <!-- ASR Testing -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ASR (Speech Recognition) Tests"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            
            <Button
                android:id="@+id/recordAudioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🎤 Record Audio"
                android:enabled="false"
                android:layout_marginEnd="4dp"/>
            
            <Button
                android:id="@+id/sendAsrButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🔊 Send ASR"
                android:enabled="false"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- TTS Testing -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TTS (Text-to-Speech) Tests"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            
            <EditText
                android:id="@+id/ttsInputText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Enter text for TTS"
                android:text="Hello, this is a TTS test."
                android:layout_marginEnd="4dp"/>
            
            <Button
                android:id="@+id/sendTtsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🔊 TTS"
                android:enabled="false"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Guardrail Testing -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardrail (Content Safety) Tests"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            
            <EditText
                android:id="@+id/guardrailInputText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Enter text for safety check"
                android:text="This is a safe message."
                android:layout_marginEnd="4dp"/>
            
            <Button
                android:id="@+id/sendGuardrailButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🛡️ Check"
                android:enabled="false"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Cancel and Reset -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            
            <Button
                android:id="@+id/cancelRequestButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🚫 Cancel Request"
                android:enabled="false"
                android:layout_marginEnd="4dp"/>
            
            <Button
                android:id="@+id/clearLogButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🗑️ Clear Log"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Log Output -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Output Log"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/logTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:text="Ready to connect..."
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:background="@android:color/darker_gray"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:fontFamily="monospace"
            android:scrollbars="vertical"/>

    </LinearLayout>
</ScrollView> 
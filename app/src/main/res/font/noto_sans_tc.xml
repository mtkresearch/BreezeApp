<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <!-- Variable font for modern Android versions -->
    <font android:fontStyle="normal"
        android:fontVariationSettings="'wght' 400"
        android:font="@font/notosanstc_variablefont_wght"
        app:font="@font/notosanstc_variablefont_wght"
        app:fontVariationSettings="'wght' 400"/>
        
    <!-- Static fonts for compatibility -->
    <!-- Thin weight -->
    <font android:fontStyle="normal"
        android:fontWeight="100"
        android:font="@font/notosanstc_thin"
        app:font="@font/notosanstc_thin"
        app:fontWeight="100"/>

    <!-- Extra Light weight -->
    <font android:fontStyle="normal"
        android:fontWeight="200"
        android:font="@font/notosanstc_extralight"
        app:font="@font/notosanstc_extralight"
        app:fontWeight="200"/>

    <!-- Light weight -->
    <font android:fontStyle="normal"
        android:fontWeight="300"
        android:font="@font/notosanstc_light"
        app:font="@font/notosanstc_light"
        app:fontWeight="300"/>

    <!-- Regular weight -->
    <font android:fontStyle="normal"
        android:fontWeight="400"
        android:font="@font/notosanstc_regular"
        app:font="@font/notosanstc_regular"
        app:fontWeight="400"/>

    <!-- Medium weight -->
    <font android:fontStyle="normal"
        android:fontWeight="500"
        android:font="@font/notosanstc_medium"
        app:font="@font/notosanstc_medium"
        app:fontWeight="500"/>

    <!-- Semi Bold weight -->
    <font android:fontStyle="normal"
        android:fontWeight="600"
        android:font="@font/notosanstc_semibold"
        app:font="@font/notosanstc_semibold"
        app:fontWeight="600"/>

    <!-- Bold weight -->
    <font android:fontStyle="normal"
        android:fontWeight="700"
        android:font="@font/notosanstc_bold"
        app:font="@font/notosanstc_bold"
        app:fontWeight="700"/>

    <!-- Extra Bold weight -->
    <font android:fontStyle="normal"
        android:fontWeight="800"
        android:font="@font/notosanstc_extrabold"
        app:font="@font/notosanstc_extrabold"
        app:fontWeight="800"/>

    <!-- Black weight -->
    <font android:fontStyle="normal"
        android:fontWeight="900"
        android:font="@font/notosanstc_black"
        app:font="@font/notosanstc_black"
        app:fontWeight="900"/>
</font-family> 
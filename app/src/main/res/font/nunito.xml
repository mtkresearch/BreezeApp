<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <!-- Variable font for modern Android versions -->
    <font android:fontStyle="normal"
        android:fontVariationSettings="'wght' 400"
        android:font="@font/nunito_variablefont_wght"
        app:font="@font/nunito_variablefont_wght"
        app:fontVariationSettings="'wght' 400"/>
    
    <font android:fontStyle="italic"
        android:fontVariationSettings="'wght' 400"
        android:font="@font/nunito_variablefont_wght_italic"
        app:font="@font/nunito_variablefont_wght_italic"
        app:fontVariationSettings="'wght' 400"/>

    <!-- Static fonts for compatibility -->
    <!-- Extra Light weight -->
    <font android:fontStyle="normal"
        android:fontWeight="200"
        android:font="@font/nunito_extralight"
        app:font="@font/nunito_extralight"
        app:fontWeight="200"/>
    <font android:fontStyle="italic"
        android:fontWeight="200"
        android:font="@font/nunito_extralight_italic"
        app:font="@font/nunito_extralight_italic"
        app:fontWeight="200"/>

    <!-- Light weight -->
    <font android:fontStyle="normal"
        android:fontWeight="300"
        android:font="@font/nunito_light"
        app:font="@font/nunito_light"
        app:fontWeight="300"/>
    <font android:fontStyle="italic"
        android:fontWeight="300"
        android:font="@font/nunito_light_italic"
        app:font="@font/nunito_light_italic"
        app:fontWeight="300"/>

    <!-- Regular weight -->
    <font android:fontStyle="normal"
        android:fontWeight="400"
        android:font="@font/nunito_regular"
        app:font="@font/nunito_regular"
        app:fontWeight="400"/>
    <font android:fontStyle="italic"
        android:fontWeight="400"
        android:font="@font/nunito_italic"
        app:font="@font/nunito_italic"
        app:fontWeight="400"/>

    <!-- Medium weight -->
    <font android:fontStyle="normal"
        android:fontWeight="500"
        android:font="@font/nunito_medium"
        app:font="@font/nunito_medium"
        app:fontWeight="500"/>
    <font android:fontStyle="italic"
        android:fontWeight="500"
        android:font="@font/nunito_medium_italic"
        app:font="@font/nunito_medium_italic"
        app:fontWeight="500"/>

    <!-- Semi Bold weight -->
    <font android:fontStyle="normal"
        android:fontWeight="600"
        android:font="@font/nunito_semibold"
        app:font="@font/nunito_semibold"
        app:fontWeight="600"/>
    <font android:fontStyle="italic"
        android:fontWeight="600"
        android:font="@font/nunito_semibold_italic"
        app:font="@font/nunito_semibold_italic"
        app:fontWeight="600"/>

    <!-- Bold weight -->
    <font android:fontStyle="normal"
        android:fontWeight="700"
        android:font="@font/nunito_bold"
        app:font="@font/nunito_bold"
        app:fontWeight="700"/>
    <font android:fontStyle="italic"
        android:fontWeight="700"
        android:font="@font/nunito_bold_italic"
        app:font="@font/nunito_bold_italic"
        app:fontWeight="700"/>

    <!-- Extra Bold weight -->
    <font android:fontStyle="normal"
        android:fontWeight="800"
        android:font="@font/nunito_extrabold"
        app:font="@font/nunito_extrabold"
        app:fontWeight="800"/>
    <font android:fontStyle="italic"
        android:fontWeight="800"
        android:font="@font/nunito_extrabold_italic"
        app:font="@font/nunito_extrabold_italic"
        app:fontWeight="800"/>

    <!-- Black weight -->
    <font android:fontStyle="normal"
        android:fontWeight="900"
        android:font="@font/nunito_black"
        app:font="@font/nunito_black"
        app:fontWeight="900"/>
    <font android:fontStyle="italic"
        android:fontWeight="900"
        android:font="@font/nunito_black_italic"
        app:font="@font/nunito_black_italic"
        app:fontWeight="900"/>
</font-family> 